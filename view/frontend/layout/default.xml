<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
		<referenceContainer name="content">
	        <block class="Yotpo\Yotpo\Block\Yotpo" name="yotpo" template="widget_script.phtml" ifconfig="yotpo/settings/active"/>
	    </referenceContainer>
        <referenceBlock name="content.aside">
            <block  class="Yotpo\Yotpo\Block\Yotpo" name="yotpo_widget_div" template="widget_div.phtml" ifconfig="yotpo/settings/active"/>
        </referenceBlock>
       <referenceContainer name="product.info.main">
            <block  class="Yotpo\Yotpo\Block\Yotpo" name="yotpo_bottomline" as="yotpo_other" template="bottomline.phtml" before="product.info.addto" ifconfig="yotpo/settings/active"/>
       </referenceContainer>
    </body>
</page>
